@model IEnumerable<Proyecto>

@if (Model is not null)
{
<div class="container">
    @*Creamos un contenedor para mostrar los proyectos*@
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var proyecto in Model) @*Con la funcion foreach podemos agregar en
        una variable proyecto cada elemento de los proyectos*@
        {
            <div class="col">
                @*Creamos la columna que va a contener cada iteración*@
                <div class="card h-100">
                    @*Cada proyecto estará almacenado en una "tarjeta*@
                    <img src="@proyecto.ImagenURL" class="card-img-top" alt="imagen proyecto" />
                    <div class="card body">
                        <h5 class="card-title">@proyecto.Titulo</h5>
                        <p class="card-text">@proyecto.Descripcion</p>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-primary" href="@proyecto.Link" target="_blank" @*Este boton abrirá el link del proyecto en otra pestaña*@
                           rel="noopener noreferrer">Visitar</a> @*Esto se pone por seguridad xd*@

                    </div>
                </div>
            </div>
        }

    </div>
    </div>
}